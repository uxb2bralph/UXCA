        Id: sealBox.id,
        SealID: sealID,
        currentItem: sealBox,
        SealScale: stampType === 'seal' ? (hScale * 1.2).toFixed(2) : hScale,
        MarginLeft: (sealBox.offsetLeft / 37.7).toFixed(2),
        MarginTop: (sealBox.offsetTop / 37.7).toFixed(2),
