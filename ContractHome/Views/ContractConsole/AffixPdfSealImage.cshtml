      // 送出合約
      commitContract() {
        const self = this;
        const payload = { ...this.form };
        const hasStamp = this.sealTempList.length > 0;
        const hasVm = this.signaturePositionsTemp.length > 0;

        if (this.isNew) {
          // 檢查起約人是否有用印
          if (!this.form.usedStamp && !hasStamp) {
            this.infoMsg = `<div class="pb-2 text-danger opacity-75" style="font-size: 4rem"><i class="far fa-exclamation-circle"></i></div><div class="lh-base">請檢查文件是否已用印</div>`;
            $("#infoModal").modal("show");
            return;
          };

          if (!hasVm) {
            this.infoMsg = `<div class="pb-2 text-danger opacity-75" style="font-size: 4rem"><i class="far fa-exclamation-circle"></i></div><div class="lh-base">請設定簽署人簽章區域</div>`;
            $("#infoModal").modal("show");
            return;
          };
        } else {
          // 簽暑人送出合約前，先檢查是否有漏填的簽章
          const signatureCount = this.contractSignaturePositions.length;
          if (signatureCount > 0) {
            let signaturePage = this.contractSignaturePositions.map(item => {
              return item.PageIndex + 1;
            });
            // 去重複
            signaturePage = [...new Set(signaturePage)].join('、 ');
            this.infoMsg = `<div class="pb-2 text-danger opacity-75" style="font-size: 4rem"><i class="far fa-exclamation-circle"></i></div><div class="lh-base">請檢查第 ${signaturePage} 頁尚未簽暑完成</div>`;
            $("#infoModal").modal("show");
            return;
          };
        }
        /** 
         * 多人簽署時，圈選框各自存回簽署人資料列
         * 非多人簽署時，相同圈選框複製到簽署人資料列
         */
        if (this.IsJointContracting) {
          payload.Contractors
            .map(item => {
              const filterList = this.signaturePositionsTemp.filter(spItem => {
                return spItem.UserId === item.Contractor;
              });
              item.SignaturePositions = filterList;
            });
        } else {
          payload.Contractors
            .map(item => {
              const { Contractor } = item
              const filterList = this.signaturePositionsTemp.map(spItem => {
                return {
                  ...spItem,
                  UserId: Contractor
                }
              });
              item.SignaturePositions = filterList;
            });
        }
        showLoading();
        postData('@(Url.Action(party == null ? "CommitContract" : "AcceptContract", "ContractConsole"))', payload)
          .then((data) => {
            this.changeStatus = data.result;
            hideLoading();
            if ($.isPlainObject(data) && data.result) {
              // 成功
              this.infoMsg = `<div class="pb-2 text-success opacity-75" style="font-size: 4rem"><i class="far fa-check-circle"></i></div><div class="lh-base"> ${this.isNew ? "已建立新合約" : "合約已用印"} (${data.dataItem.contractNo})</div>`;
              this.isCreate = true;
            } else {
              // 失敗
              this.infoMsg = `<div class="pb-2 text-danger opacity-75" style="font-size: 4rem"><i class="far fa-exclamation-circle"></i></div><div class="lh-base"> ${data.message.replace(/、/g, '<br>')} </div>`;
            }
            $("#infoModal").modal("show");
          })
      },

      // 清除用印
      resetSignature() {
        const self = this;
        clearErrors();
        const payload = {
          KeyID: $global.viewModel.KeyID,
          PageIndex: this.selectedPage - 1,
        };

        showLoading();
        // Post API
        // 解決重複跑三次的問題，不用Form submit的方式做
        $.post('@Html.Raw(Url.Action("ResetPdfSignature", "ContractConsole"))', payload, function (data) {
          if (data.result) {
            // 成功
            if (self.isNew) {
              self.sealTempList = [];
            } else {
              // 簽署人清除用印後要還原用印區塊
