      <div class="ms-auto">
        <button type="button" data-bs-toggle="tooltip" data-bs-placement="top" title="新增合約"
          class="btn btn-lg btn-success rounded-pill opacity-75" v-on:click="addHandler">
          <i class="fal fa-file-plus"></i>
        </button>
      </div>
    </div>
