@using Microsoft.AspNetCore.Http;
@using CommonLib.Core.Utility;
@using ContractHome.Helper;
@{
    var Response = ViewContext.HttpContext.Response;
    var Request = ViewContext.HttpContext.Request;
    String? _model = this.Model as String;
    String keyID = _model.EncryptData();
}
<div class="card">
    <div class="card-body" onclick="downloadTemplate('@Html.Raw(keyID)');">
        <div class="d-flex align-items-center">
            <img src="@Html.Raw(Url.Action("Thumbnail","ContractTemplate",new { KeyID = keyID }))"
                 alt="" />
            <div class="ms-3">
                <p class="fw-bold mb-1">@(System.IO.Path.GetFileName(_model))</p>
                <p class="text-muted mb-0"></p>
            </div>
        </div>
    </div>
</div>

